{{#if carrito.length}}
    
    <button class="btn__enviarCarrito">Enviar</button>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{marca}}</td>
            <td>
                <img src="{{imagen}}" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>

            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}

            <td>
                <button>Borrar</button>
            </td>
        </tr>
    </table>
{{else}}
    <h2>El carrito está vacío</h2>
{{/if}}

