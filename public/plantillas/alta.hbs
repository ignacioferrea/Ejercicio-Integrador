{{#if productos.length}}
<table>
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Marca</th>
        <th>Categoría</th>
        <th>Detalles</th>
        <th>Foto</th>
        <th>Envío</th>
    </tr>
    {{#each productos}}
    <tr>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>{{stock}}</td>
        <td>{{marca}}</td>
        <td>{{categoria}}</td>
        <td>{{detalles}}</td>
        <td>
            <img src="{{foto}}" alt="{{nombre}}" style="display:block; margin: 0 auto;" width="50" height="45">
        </td>
        {{#if envio}}
            <td>Si</td>
        {{else}}
            <td>No</td>
        {{/if}}
        <td class="tdEditar">
            {{#if ../validos}}
                <button onclick="productoController.actualizarProducto('{{id}}')" class="buttonEditar"><img src="../img/otros/editar.svg" alt="editar"></button>
            {{else}}
                <button disabled onclick="productoController.actualizarProducto('{{id}}')" class="buttonEditar"><img src="../img/otros/editar.svg" alt="editar"></button>
            {{/if}}
        </td>
        <td class="tdBorrar">
            <button onclick="productoController.borrarProducto('{{id}}')" class="buttonBorrar"><img src="../img/otros/borrar.svg" alt="borrar"></button>
        </td>
    </tr>
    {{/each}}
</table>
{{/if}}